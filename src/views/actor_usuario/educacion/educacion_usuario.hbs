<body>
    
    <header>
        <nav class="Portafolio-Servicios">
            <ul class="contenedor-iconos-header">
               <li class="icon icon1"><a href="/inicio_usuario"><span></span></a></li>
                <li class="icon icon2"><a href="/educacion_usuario"> <span></span></a></li>
                <li class="icon icon3"><a href="/reservas_usuario"> <span></span></a></li>
                <li class="icon icon4"><a href="/contacto_usuario"> <span></span></a></li>
                <li class="icon icon5"><a href="/cartama_usuario"> <span></span></a></li>
                <li class="icon icon6"><a href="/usuario_usuario"> <span></span></a></li>
            </ul>
            <div class="contendor-iconos-nombres">
                <p>Inicio</p>
                <p>Educacion</p>
                <p>Reservas</p>
                <p>Contacto</p>
                <p>Cartama</p>
                <p>Usuario </p>
            </div>
        </nav>
    </header>
    <section class="contenedor-imagen-bienvenida">
        <section class="imagen-para-desktop">
            <p class="p_slogan">Parque educativo cartama "Un encuentro de saberes"</p>
        </section>
    </section>
    <section>

    
    <main>
        <h1>Tecnicas, Tecnologias, Talleres y cursos cortos.</h1>
        <section class="contenido-del-inicio">
            {{#each query_education}}
            <article class="article-1">
                <div class="contenedor-info-publicacion">
                    <output class="titulo-publicacion">
                        {{titulo_publicacion}}
                    </output>
                    <output class="tipo-publicacion">
                        {{tipo_publicacion}}
                    </output>
                    <p class="separador">-</p>
                    <output class="fecha-publicacion">
                        {{created_at}}
                    </output>
                </div>
                    <output class="descripcion">
                        {{descripcion}}
                    </output>
                    
                     <output>
                        <img class="imagen_publicacion" src="data:image/png;base64, {{imagen}}" alt="Imagen de la publicacion">
                     </output>

                  <div class="button-container"> 
                    <a class="intput-button" href="/inicio_usuario/inscripcion/{{id_publicacion}}">Me inscribo</a>
                  </div>

            </article>
            {{/each}}

         
        </section>
    </main>
</body>
