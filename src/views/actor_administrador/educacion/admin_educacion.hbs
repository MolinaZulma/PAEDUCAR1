                                {{created_at}}
                            </output>
                        </section>     

                            <output class="descripcion">
                                {{descripcion}}
                            </output>
                            
                            <output>
                                <img class="imagen_publicacion" src="data:image/png;base64, {{imagen}}" alt="">
                            </output>


                        <div class="container_postulados">
                         <a class="intput-button intput-button_desktop " href="/admin_educacion/ver_postulados_educacion/ {{id_publicacion}}">Ver postulados</a>
                        </div>
                        

                    </article>
            {{/each}}
