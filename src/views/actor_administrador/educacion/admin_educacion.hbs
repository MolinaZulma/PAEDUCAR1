         <section class="contenido-del-inicio">
            {{#each query_education_publications}}    
                    <article class="article-1">

                        <section class="meta-informacion">
                            <output class="titulo-publicacion">
                                {{titulo_publicacion}}
                            </output>
                            
                            <output class="tipo-publicacion">
                                {{tipo_publicacion}}
                            </output>

                            <output class="tipo-publicacion">
                                {{link_form_publicacion}}
