<main class="contenedor-nueva-publicacion">
    
        <section class="seccion-formulario">
            <form class="formulario" action="/edit_publication/{{data_publication.id_publicacion}}" method="POST" id="">  
                <h2>Nueva Publicación</h2>
               <div class="contenido_Formulario">
                    
                    <label for="titulo_Publicacion">
                        <input class="form-inputs titulo" type="text" value="{{data_publication.titulo_publicacion}}" id="id_publicacion" name="titulo_publicacion" placeholder="Titulo de la publicación:" required maxlength="90" oninput="this.value = this.value.replace(/[^a-zñ A-ZÑ]/g, '').replace(/(\..*)\./g, '$1');">
                    </label>
                            
                    <label for="tipo-Publicacion">
                        <input class="form-inputs" type="text" value="{{data_publication.tipo_publicacion}}" id="tipo-Publicacion" name="tipo_publicacion" placeholder="Tipo publicación:" required maxlength="90" oninput="this.value = this.value.replace(/[^a-zñ A-ZÑ]/g, '').replace(/(\..*)\./g, '$1');">
                    </label>

                    
                    <label for="contenido_Publicacion">
                        <textarea class="form-inputs-texarea" maxlength="500" id="contenido_Publicacion" cols="30" rows="10" name="descripcion" placeholder="Contenido de la publicación: " required>{{data_publication.descripcion}}</textarea>
                    </label>

                    <div class="contenedor-file">
                        <p class="texto">Subir imagen</p>
                            <label for="img-Publicacion">
                                <input class="paper-dowl" type="file" id="img-Publicacion" name="imagen" placeholder="Subir Imagen">
                            </label>
                    </div>
                 
                <input class="form_boton" type="submit">
                    
               </div>
            </form>    
        </section>
</main>
